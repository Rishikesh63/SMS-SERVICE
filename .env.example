# Turso Database Configuration
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here

# Ollama Configuration (optional - defaults shown)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b

# SignalWire Configuration (for SMS server)
# Get these from: https://signalwire.com/signin
SIGNALWIRE_PROJECT_ID="your-project-id-here"
SIGNALWIRE_AUTH_TOKEN="your-auth-token-here"
SIGNALWIRE_SPACE_URL="your-space.signalwire.com"
SIGNALWIRE_FROM_NUMBER="your-signalwire-phone-number"

# AI Service Configuration (for SMS server)
# Using Groq API (fast, cloud-based):
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# Alternative: For local Ollama:
# AI_API_URL=http://localhost:11434
# AI_MODEL=llama3.2:1b

# Server Configuration
PORT=3000

# Logging Level
RUST_LOG=info

